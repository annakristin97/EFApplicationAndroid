<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:context=".UI.NewItemActivity"
    android:id = "@+id/newitemcontainer"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/colorPrimaryBlue">

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item name"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryBlue"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/colorPrimaryBlue">

            <EditText
                android:id="@+id/input_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item description"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="15sp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/colorPrimaryBlue">

            <EditText
                android:id="@+id/input_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price (ISK)"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="15sp"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/input_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Type"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/typeSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/typeItems" />

        <TextView
            android:id="@+id/input_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Size"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/sizeSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/sizeItems" />

        <TextView
            android:id="@+id/input_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Color"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/colorSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/colorItems" />

        <TextView
            android:id="@+id/input_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Brand"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/brandSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/brandItems" />

        <TextView
            android:id="@+id/input_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Condition"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/conditionSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/conditionItems" />

        <TextView
            android:id="@+id/input_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Gender"
            android:textColor="@color/colorPrimaryBlue"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:entries="@array/genderItems" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/addItemButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="Add Item"
            android:background="@drawable/mybutton"
            android:textColor="@color/colorAccentWhite"/>

    </LinearLayout>

</FrameLayout>
